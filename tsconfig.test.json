{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2015"],
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["anchor/tests/**/*", "anchor/target/types/**/*"],
  "exclude": ["node_modules"]
}
